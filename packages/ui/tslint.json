{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "object-literal-sort-keys": false,
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ] 
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "**/*.json",
      "node_modules/**/*.ts"
    ]
  }
}
